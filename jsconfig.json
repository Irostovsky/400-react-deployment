{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "backend/**/*",
    "frontend/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
} 